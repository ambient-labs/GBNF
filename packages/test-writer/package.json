{
  "name": "test-writer",
  "private": true,
  "version": "0.0.1",
  "description": "Builds integration tests for GBNF",
  "type": "module",
  "bin": {
    "write-tests": "./dist/test-writer.mjs"
  },
  "scripts": {
    "test:watch": "pnpm vitest --config=vitest.config.ts",
    "lint": "wireit",
    "test": "pnpm test:unit",
    "test:unit": "wireit",
    "build:check": "wireit",
    "build": "wireit"
  },
  "wireit": {
    "lint": {
      "command": "eslint -c .eslintrc.cjs src --ext .ts"
    },
    "test:unit": {
      "command": "vitest run --config=vitest.config.ts"
    },
    "build:check": {
      "command": "path-exists ./dist/test-writer.mjs"
    },
    "build": {
      "command": "esbuild ./src/index.ts --bundle --format=esm --platform=node --outfile=dist/test-writer.mjs --external:'commander' --external:ejs --external:marked",
      "output": [
        "dist/**"
      ],
      "files": [
        "src/**/*.ts",
        "!src/**/*.test.ts",
        "package.json",
        "tsconfig.json"
      ]
    }
  },
  "devDependencies": {
    "@types/node": "latest",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "esbuild": "^0.24.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "path-exists-cli": "^2.0.0",
    "typescript": "^5.6.3",
    "vitest": "^2.1.5",
    "wireit": "^0.14.9"
  },
  "dependencies": {
    "chokidar": "^4.0.1",
    "commander": "^11.0.0",
    "marked": "^14.1.3",
    "mkdirp": "^3.0.1",
    "pyodide": "^0.26.2",
    "rimraf": "^5.0.5"
  }
}
